  <gazebo reference="imu_link">
    <sensor name="imu" type="imu">
      <always_on>1</always_on>
      <update_rate>50</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
      <enable_metrics>true</enable_metrics>
      <imu>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <stddev>0.05</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <stddev>0.05</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <stddev>0.05</stddev>
            </noise>
          </z>
        </linear_acceleration>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <stddev>0.005</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <stddev>0.005</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <stddev>0.005</stddev>
            </noise>
          </z>
        </angular_velocity>
        <enable_orientation>true</enable_orientation>
      </imu>
    </sensor>
  </gazebo>
  
  <gazebo reference="base_laser_link">
    <sensor name="gpu_lidar" type="gpu_lidar"> <!-- no impl: "lidar" is not supported -->
      <always_on>1</always_on>
      <update_rate>10</update_rate>
      <visualize>true</visualize>
      <topic>/scan</topic>
      <enable_metrics>true</enable_metrics>
      <gz_frame_id>/base_laser_link</gz_frame_id> <!-- may be replaced with frame_id to follow sdf. Currently gives a warning that states that the spec doesn't exist, but the tag can actually be used. (as of 6 Sep 25) -->
      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples> <!-- bug: last reading is 0.05 if ogre is used and there is no compatible gpu. In this case, use the slower "export LIBGL_ALWAYS_SOFTWARE=1" (can be set in launch file) -->
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
          <!-- bug: "vertical" maybe required for 2d range to work if ogre is used. but results in last reading becoming 0.05 -->
          <!-- <vertical>
              <samples>3</samples>
              <min_angle>-0.001</min_angle>
              <max_angle>0.001</max_angle>
          </vertical>
          -->
        </scan>
        <range>
          <min>0.05</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
        </noise>
      </lidar>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin
        filename="gz-sim-velocity-control-system"
        name="gz::sim::systems::VelocityControl">
        <topic>/cmd_vel</topic>
        <initial_linear>0 0 0</initial_linear>
        <initial_angular>0 0 0</initial_angular>
    </plugin>
  </gazebo>

  <gazebo>
    <!-- odometry publisher will stop publishing if the robot doesn't move, publishing again only if it starts moving -->
    <!-- xyz_offset (vec3), rpy_offset (vec3), gaussian_noise (dbl), odom_covariance_topic -->
    <plugin filename="gz-sim-odometry-publisher-system"
        name="gz::sim::systems::OdometryPublisher">
      <odom_frame>/odom</odom_frame>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <gaussian_noise>0.01</gaussian_noise> <!-- affects velocity only -->
      <robot_base_frame>/base_footprint</robot_base_frame>
      <dimensions>2</dimensions> 
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>
  </gazebo>

</robot>